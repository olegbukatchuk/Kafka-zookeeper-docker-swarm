# -*- mode: ruby -*-
HOST_PREFIX = "server"
NET = "192.168.10."
DOMAIN = ".local"

servers = [
  {
    :hostname => HOST_PREFIX + "1" + DOMAIN,
    :ip => NET + "11",
    :ssh_host => "20011",
    :ssh_vm => "22",
    :ram => 4096,
    :core => 1
  },
  {
    :hostname => HOST_PREFIX + "2" + DOMAIN,
    :ip => NET + "12",
    :ssh_host => "20012",
    :ssh_vm => "22",
    :ram => 4096,
    :core => 1
  },
  {
    :hostname => HOST_PREFIX + "3" + DOMAIN,
    :ip => NET + "13",
    :ssh_host => "20013",
    :ssh_vm => "22",
    :ram => 4096,
    :core => 1
  },
  {
    :hostname => HOST_PREFIX + "4" + DOMAIN,
    :ip => NET + "14",
    :ssh_host => "20014",
    :ssh_vm => "22",
    :ram => 4096,
    :core => 1
  },
  {
    :hostname => HOST_PREFIX + "5" + DOMAIN,
    :ip => NET + "15",
    :ssh_host => "20015",
    :ssh_vm => "22",
    :ram => 4096,
    :core => 1
  },
  {
    :hostname => HOST_PREFIX + "6" + DOMAIN,
    :ip => NET + "16",
    :ssh_host => "20016",
    :ssh_vm => "22",
    :ram => 4096,
    :core => 1
  }
]

Vagrant.configure(2) do |config|
  config.vm.synced_folder ".", "/vagrant", disabled: true
  servers.each do |machine|
    config.vm.define machine[:hostname] do |node|
      node.vm.box = "debian/stretch64"
      node.vm.hostname = machine[:hostname]
      node.vm.network "private_network", ip: machine[:ip]
      node.vm.network :forwarded_port, guest: machine[:ssh_vm], host: machine[:ssh_host]
      node.vm.provider "virtualbox" do |vb|
        vb.customize ["modifyvm", :id, "--memory", machine[:ram]]
        vb.customize ["modifyvm", :id, "--cpus", machine[:core]]
        vb.name = machine[:hostname]
      end
      node.vm.provision "ansible" do |setup|
        setup.inventory_path = "../ansible/hosts"
        setup.playbook = "../ansible/roles/setup.yaml"
        setup.become = true
        setup.extra_vars = { ansible_user: 'vagrant' }
      end
      if (machine[:hostname]) == HOST_PREFIX + "6" + DOMAIN
        node.vm.provision "ansible" do |swarm|
          swarm.inventory_path = "../ansible/hosts"
          swarm.playbook = "../ansible/roles/swarm.yaml"
          swarm.become = true
          swarm.extra_vars = {
            swarm_iface: "eth1"
          }
          swarm.groups = {
            "manager" => [HOST_PREFIX + "1" + DOMAIN],
            "worker"  => [HOST_PREFIX + "[2:6]" + DOMAIN],
          }
        end
      end
    end
  end
end
